{
  "name": "dkd/apache-solr-for-typo3-dev-distribution",
  "description": "TYPO3 CMS Base Distribution for EXT:solr* development and testing.",
  "license": "GPL-2.0-or-later",
  "repositories": {
    "0": {
      "type": "path",
      "url": "packages/*"
    }
  },
  "require": {
    "ext-dom": "*",
    "ext-json": "*",
    "ext-pdo": "*",
    "typo3/cms-backend": "11.5.x-dev",
    "typo3/cms-core": "11.5.x-dev",
    "typo3/cms-extbase": "11.5.x-dev",
    "typo3/cms-extensionmanager": "11.5.x-dev",
    "typo3/cms-filelist": "11.5.x-dev",
    "typo3/cms-fluid": "11.5.x-dev",
    "typo3/cms-frontend": "11.5.x-dev",
    "typo3/cms-install": "11.5.x-dev",
    "typo3/cms-recordlist": "11.5.x-dev",
    "typo3/cms-about": "11.5.x-dev",
    "typo3/cms-adminpanel": "11.5.x-dev",
    "typo3/cms-belog": "11.5.x-dev",
    "typo3/cms-beuser": "11.5.x-dev",
    "typo3/cms-felogin": "11.5.x-dev",
    "typo3/cms-fluid-styled-content": "11.5.x-dev",
    "typo3/cms-form": "11.5.x-dev",
    "typo3/cms-impexp": "11.5.x-dev",
    "typo3/cms-info": "11.5.x-dev",
    "typo3/cms-lowlevel": "11.5.x-dev",
    "typo3/cms-redirects": "11.5.x-dev",
    "typo3/cms-reports": "11.5.x-dev",
    "typo3/cms-rte-ckeditor": "11.5.x-dev",
    "typo3/cms-setup": "11.5.x-dev",
    "typo3/cms-seo": "11.5.x-dev",
    "typo3/cms-scheduler": "11.5.x-dev",
    "typo3/cms-sys-note": "11.5.x-dev",
    "typo3/cms-t3editor": "11.5.x-dev",
    "typo3/cms-tstemplate": "11.5.x-dev",
    "typo3/cms-viewpage": "11.5.x-dev",
    "typo3/cms-filemetadata": "11.5.x-dev",
    "helhum/typo3-console": "~7.0.3",
    "typo3-console/composer-auto-commands": "0.5.2",
    "dkd/apache-solr-for-typo3-sitepackage": "@dev",
    "apache-solr-for-typo3/solr": "@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpspec/prophecy-phpunit": "*",
    "typo3/testing-framework": "^6.12",
    "rector/rector": "^0.11.60",
    "typo3/coding-standards": ">=0.5.0",
    "dg/bypass-finals": "^1.3"
  },
  "autoload-dev": {
    "psr-4": {
      "TYPO3\\CMS\\Core\\Tests\\": "public/typo3/sysext/core/Tests/",
      "ApacheSolrForTypo3\\Solr\\Tests\\": "public/typo3conf/ext/solr/Tests/",
      "ApacheSolrForTypo3\\Solrconsole\\Tests\\": "public/typo3conf/ext/solrconsole/Tests/",
      "ApacheSolrForTypo3\\Solrdebugtools\\Tests\\": "public/typo3conf/ext/solrdebugtools/Tests/",
      "ApacheSolrForTypo3\\Solrfal\\Tests\\": "public/typo3conf/ext/solrfal/Tests/",
      "ApacheSolrForTypo3\\Solrfluidgrouping\\Tests\\": "public/typo3conf/ext/solrfluidgrouping/Tests/",
      "ApacheSolrForTypo3\\Solrmlt\\Tests\\": "public/typo3conf/ext/solrmlt/Tests/",
      "ApacheSolrForTypo3\\Tika\\Tests\\": "public/typo3conf/ext/tika/Tests/"
    }
  },
  "scripts": {
    "typo3-cms-scripts": [
      "typo3cms install:fixfolderstructure",
      "[ -f ./public/typo3conf/LocalConfiguration.php ] || typo3cms install:setup",
      "typo3cms cache:flush"
    ],
    "import-not-exportable-by-impexp-once": [
      "./packages/apache_solr_for_typo3_sitepackage/Initialisation/not_covered_by_impexp.sh"
    ],
    "sitepackage-scripts": [
      "composer run setup -d public/typo3conf/ext/apache_solr_for_typo3_sitepackage"
    ],
    "post-autoload-dump": [
      "@typo3-cms-scripts",
      "@import-not-exportable-by-impexp-once",
      "@sitepackage-scripts"
    ]
  },
  "minimum-stability": "dev",
  "config": {
    "allow-plugins": true
  }
}
