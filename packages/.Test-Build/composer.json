{
    "name": "dkd/apache-solr-for-typo3-testing",
    "description": "Apache Solr for TYPO3 - Testing",
    "license": "GPL-2.0-or-later",
    "config": {
        "platform": {
            "php": "7.2"
        },
        "vendor-dir": "vendor",
        "bin-dir": "bin"
    },
    "repositories": {
        "typo3-ter": {
            "type": "composer",
            "url": "https://composer.typo3.org/"
        },
        "ext-solr-stack": {
            "type": "path",
            "url": "../../packages/*",
            "options": {
              "symlink": true
            }
        }
    },
    "require": {
        "apache-solr-for-typo3/solr":"@dev",
        "apache-solr-for-typo3/solrfal": "@dev",
        "typo3/cms-filemetadata": "^9.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "nimut/testing-framework": "^4.0.0",
        "typo3/cms-core": "^9.5.0",
        "typo3/cms-backend": "^9.5.0",
        "typo3/cms-fluid": "^9.5.0",
        "typo3/cms-frontend": "^9.5.0",
        "typo3/cms-extbase": "^9.5.0",
        "typo3/cms-reports": "^9.5.0",
        "typo3/cms-scheduler": "^9.5.0",
        "typo3/cms-tstemplate": "^9.5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "ApacheSolrForTypo3\\Solr\\Tests\\": "public/typo3conf/ext/solr/Tests/",
            "ApacheSolrForTypo3\\Solrfal\\Tests\\": "public/typo3conf/ext/solrfal/Tests/",
            "TYPO3\\CMS\\Core\\Tests\\": "public/typo3/sysext/core/Tests/"
        }
    }
}
